          <div class="col-xs-6 col-sm-3"><%= link_to 'BLOG', 'https://ello.co/niletravel' %></div>
          <div class="col-xs-6 col-sm-6 col-sm-offset-2"><%= link_to 'MANIFESTO', manifesto_path %></div>

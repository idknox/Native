<section class="footer">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-4 icons">
        <div class="row">
          <div class="col-xs-3 col-sm-3">
            <%= link_to (image_tag 'Soc_Insta_Icon.svg'), '#' %>
          </div>
          <div class="col-xs-3 col-sm-3">
            <%= link_to (image_tag 'Soc_FacebookIcon.svg'), '#' %>
          </div>
          <div class="col-xs-3 col-sm-3">
            <%= link_to (image_tag 'Soc_Twitter_Icon.svg'), '#' %>
          </div>
          <div class="col-xs-3 col-sm-3">
            <%= link_to (image_tag 'Soc_Ello_Icon.svg'), 'https://ello.co/niletravel' %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-3 col-sm-offset-5 links menu-item">
